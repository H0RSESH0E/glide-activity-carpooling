<div class="row d-flex justify-content-center">


  <div class="row  justify-content-center">
    <header class="col-12 d-flex justify-content-center">
      <h2 class="main-heading light-on-dark">Edit Profile</h2>
    </header>
  </div>


  <main class="col-sm-9 col-md-6 col-xl-4 d-flex justify-content-center">
    <form id="edit-profile" class="gupta">

      <div class="row d-flex align-items-center justify-content-center">
        <div class="col-12 d-flex flex-column align-items-center">
          <label  for="edit-first-name">First Name:</label>
          <input name="edit-first_name" type="text" value="{{sessionInfo.first_name}}" />
        </div>
      </div>

      <div class="row d-flex align-items-center justify-content-center">
        <div class="col-12 d-flex flex-column align-items-center">
          <label  for="edit-last-name">Last Name:</label>
          <input name="edit-last-name" type="text" value="{{sessionInfo.last_name}}" />
        </div>
      </div>

      <div class="row d-flex align-items-center justify-content-center">
        <div class="col-12 d-flex flex-column align-items-center">
          <label  for="edit-email">Email:</label>
          <input name="edit-email" type="text" value="{{sessionInfo.email}}" />
        </div>
      </div>

      <div class="row d-flex align-items-center justify-content-center">
        <div class="col-12 d-flex flex-column align-items-center">
          <button type="submit" class="btn">Save changes</button>
        </div>
      </div>

    </form>
  </main>


</div>
<script src="/javascript/edit-user.js"></script>
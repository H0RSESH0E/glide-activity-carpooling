                <h2 class="col-12 light-on-dark login-name">Hi {{first_name}}!</h2>
            </div>
            {{/if}}
            <hr>

            <div class="row d-flex align-items-center">
                <img src="star-icon.svg" alt="" class="col-lg-2 col-md-2 col-sm-3">
                <a href="/popular-activities" class="col-lg-10 col-md-10 col-sm-9">Popular Activities</a>
            </div>

            <div class="row d-flex align-items-center">
                <img src="star-icon.svg" alt="" class="col-lg-2 col-md-2 col-sm-3">

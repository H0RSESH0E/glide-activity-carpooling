        </div>

        <div class="row d-flex align-items-center">
            <img src="/vehicle-cab-icon.svg" alt="" class="col-3 icon">
            <a href="/dashboard" class="col-9">Dashboard</a>
        </div>

        {{else}}

        <div class="row d-flex align-items-center">

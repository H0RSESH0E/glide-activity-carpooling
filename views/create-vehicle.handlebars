<div class="outer-div">

  {{> side-bar sessionInfo }}
  <main class="scrollable">

    <div class="row">
      <header class="col-12 d-flex justify-content-center">
        <h2>Create Vehicle</h2>
      </header>
    </div>

    <section class="row">
      <div class="col-12 d-flex justify-content-center flex-wrap">
        <form class="vehicle-create">
          <div>
            <label for="vehicle-year">Year:</label>
            <input type="number" id="vehicle-year" name="year" placeholder="Example: 2022" />
          </div>
          <div>
            <label for="vehicle-make">Make:</label>
            <input type="text" id="vehicle-make" name="make" placeholder="Example: Ford" />
          </div>
          <div>
            <label for="vehicle-model">Model:</label>
            <input type="text" id="vehicle-model" name="model" placeholder="Example: F150" />
          </div>
          <div>
            <label for="vehicle-fuel_eco">Fuel Economy:</label>
            <input type="text" id="vehicle-fuel_eco" name="fuel_eco" placeholder="Example: Gasoline, Diesel.." />
          </div>
          <div>
            <label for="vehicle-color">Color:</label>
            <input type="color" id="vehicle-color" name="color" />
          </div>
          <div>
            <label for="vehicle-max_passengers">Passenger Capacity:</label>
            <input type="number" id="vehicle-max_passengers" name="max_passengers" placeholder="Passengers" />
          </div>
          <button type="submit" class="btn btn-light">Create</button>
        </form>
      </div>
    </section>

  </main>
</div>

<script src="/javascript/add-vehicle.js"></script>
<script src="/javascript/nav-bar.js"></script>